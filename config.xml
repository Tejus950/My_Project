<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
<session-factory>
 <property name="hibernate.connection.Driver_class">com.mysql.cj.jdbc.Driver</property>
 <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/OnlineFoodOrderProject</property>
<property name="hibernate.connection.user">root</property>
<property name="hibernate.connection.password">root</property>
<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="hibernate.show_sql">true</property>
<property name="hibernate.hbm2ddl.auto">update</property>
<mapping class="com.hibernate.entity.Users"/>
<mapping class="com.hibernate.entity.Restaurants"/>
<mapping class="com.hibernate.entity.MenuItems"/>
<mapping class="com.hibernate.entity.Orders"/>
<mapping class="com.hibernate.entity.OrderItems"/>
<mapping class="com.hibernate.entity.Payments"/>
<mapping class="com.hibernate.entity.Reviews"/>
<mapping class="com.hibernate.entity.Categories"/>

</session-factory>
</hibernate-configuration>